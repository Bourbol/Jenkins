#!Groovy

properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
    }
    triggers { pollSCM('* * * * *') }
    options { timestamps() }
    stages {
        stage("Docker login") {
            steps {
                echo "======= Docker login ======="
                withCredentials([usernamePassword(credentialsId: 'dockerhub_push', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                sh 'docker login -u $USERNAME -p $PASSWORD'
                }
            }
        }
        stage("Docker build") {
            steps {
                echo "======= Docker build ======="
                dir('docker/docker_file/') {
                    sh 'docker build -t bourbol/ubuntu:test .'
                }
            }
        }
        stage("Docker push") {
            steps {
                echo "======= Docker push ======="
                sh 'docker push bourbol/ubuntu:test'
            }
        }
    }
}
