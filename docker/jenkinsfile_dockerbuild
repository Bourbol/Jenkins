#!Groovy

properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
    }
    triggers{ pollSCM('* * * * *') }
    options { timestamps() }
    stages {
        stage("Docker Build") {
            steps {
                echo "--------------- Start Docker Build ---------------"
                dir ('docker/docker_file/') {
                    sh 'docker build .'
                }
            }
        }
    }
}
